.c-collapse{
  width: 100%;
}
.c-collapse .cBox{
  width: 100%;
  position: relative;
}
.c-collapse .cBox .cHeader{
  position: absolute;
  display: block;
  box-sizing: border-box;
  top: 0;
  right: 0;
}
.c-collapse .cBox .cHeader .cTitle{
  display: inline-block;
  color: #C1C1C1;
  font-size: 14px;
}
.c-collapse .cBox .cHeader .cIcon{
  display: inline-block;
  width: 25px;
  height: 25px;
  background-image: url("data:image/png;base64,");
  background-size: 100% 100%;
  position: relative;
  top: 10px;
  left: 3px;
  transition: 0.2s linear;
}
.c-collapse .cBox .cContent{
  width: 100%;
  margin-top: 50px;
  border-top: 1px solid #F3F3F3;
}


/*折叠时样式*/
.c-collapse .close .cHeader .cIcon{
  transform: rotateZ(-90deg);
}
.c-collapse .close .cContent{
  display: none;
}